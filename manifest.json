{
    "manifest_version": 2,

    "name": "DomainUserAgent",
    "description": "This extension changes the user agent depending on the hostname.",
    "version": "1.0",
    
    "background": {
        "scripts": ["replace.js"]
    },
    "options_page": "options.html",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage",
        "*://*/*"
    ],
    "icons": {"128": "icon.png","48": "icon.png","16": "icon.png"},
    
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}